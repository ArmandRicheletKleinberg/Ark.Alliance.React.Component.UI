{
    "id": "gauge-digital",
    "title": "Digital Gauge",
    "description": "Segment-display style numeric indicator with trend.",
    "componentId": "DigitalGauge",
    "layout": {
        "width": "auto",
        "height": "auto"
    },
    "preview": {
        "background": "dark"
    },
    "defaultProps": {
        "value": 1250.50,
        "label": "Portfolio Balance",
        "prefix": "$",
        "suffix": "USD",
        "showTrend": true,
        "trend": "up",
        "color": "auto",
        "size": "lg",
        "decimals": 2
    },
    "controls": [
        {
            "propName": "value",
            "type": "slider",
            "label": "Value",
            "min": -5000,
            "max": 5000,
            "step": 10,
            "group": "data"
        },
        {
            "propName": "decimals",
            "type": "slider",
            "label": "Decimals",
            "min": 0,
            "max": 4,
            "step": 1,
            "group": "data"
        },
        {
            "propName": "color",
            "type": "select",
            "label": "Color Theme",
            "options": [
                "auto",
                "green",
                "red",
                "blue",
                "cyan",
                "white"
            ],
            "group": "style"
        },
        {
            "propName": "showTrend",
            "type": "boolean",
            "label": "Show Trend",
            "group": "style"
        },
        {
            "propName": "trend",
            "type": "select",
            "label": "Trend Direction",
            "options": [
                "up",
                "down",
                "neutral"
            ],
            "group": "data"
        },
        {
            "propName": "size",
            "type": "select",
            "label": "Size",
            "options": [
                "sm",
                "md",
                "lg"
            ],
            "group": "style"
        },
        {
            "propName": "label",
            "type": "text",
            "label": "Label",
            "group": "content"
        }
    ]
}