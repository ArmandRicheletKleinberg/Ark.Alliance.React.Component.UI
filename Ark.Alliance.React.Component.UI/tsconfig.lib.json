{
    "extends": "./tsconfig.app.json",
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "noEmit": false,
        "skipLibCheck": true,
        "strict": false,
        "noImplicitAny": false,
        "strictNullChecks": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "src/**/*.spec.ts",
        "src/**/*.spec.tsx",
        "src/ShowcaseApp.tsx",
        "src/main.tsx",
        "node_modules",
        "dist"
    ]
}