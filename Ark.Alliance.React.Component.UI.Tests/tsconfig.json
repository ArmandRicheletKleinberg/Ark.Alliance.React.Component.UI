{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "types": [
            "vitest/globals",
            "@testing-library/jest-dom"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "../Ark.Alliance.React.Component.UI/src/*"
            ],
            "@core/*": [
                "../Ark.Alliance.React.Component.UI/src/core/*"
            ],
            "@components/*": [
                "../Ark.Alliance.React.Component.UI/src/components/*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "setup.ts"
    ],
    "references": [
        {
            "path": "../Ark.Alliance.React.Component.UI"
        }
    ]
}