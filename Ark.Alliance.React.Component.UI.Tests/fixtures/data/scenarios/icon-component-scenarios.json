{
    "id": "icon-component-scenarios",
    "name": "Icon Component Scenarios",
    "component": "FAIcon",
    "category": "Icon",
    "scenarios": [
        {
            "id": "ICON-001",
            "name": "FAIcon - Solid Style",
            "description": "Verify solid Font Awesome icon renders",
            "actions": [
                {
                    "type": "render",
                    "props": {
                        "name": "user",
                        "iconStyle": "solid"
                    }
                }
            ],
            "expectedResults": {
                "isValid": true,
                "prefix": "fas"
            }
        },
        {
            "id": "ICON-002",
            "name": "FAIcon - Brands Style",
            "description": "Verify brand icon renders correctly",
            "actions": [
                {
                    "type": "render",
                    "props": {
                        "name": "github",
                        "iconStyle": "brands"
                    }
                }
            ],
            "expectedResults": {
                "isValid": true,
                "prefix": "fab"
            }
        },
        {
            "id": "ICON-003",
            "name": "FAIcon - Invalid Name",
            "description": "Verify invalid icon name is handled gracefully",
            "actions": [
                {
                    "type": "render",
                    "props": {
                        "name": "nonexistent-icon-xyz"
                    }
                }
            ],
            "expectedResults": {
                "isValid": false,
                "iconDef": null
            }
        },
        {
            "id": "ICON-004",
            "name": "FAIcon - Spin Animation",
            "description": "Verify spin prop enables animation",
            "actions": [
                {
                    "type": "render",
                    "props": {
                        "name": "spinner",
                        "spin": true
                    }
                }
            ],
            "expectedResults": {
                "isValid": true,
                "hasSpinAnimation": true
            }
        },
        {
            "id": "ICON-005",
            "name": "FAIcon - Size Variants",
            "description": "Verify size prop is passed correctly",
            "testCases": [
                {
                    "props": {
                        "name": "user",
                        "size": "xs"
                    },
                    "expectedSize": "xs"
                },
                {
                    "props": {
                        "name": "user",
                        "size": "sm"
                    },
                    "expectedSize": "sm"
                },
                {
                    "props": {
                        "name": "user",
                        "size": "lg"
                    },
                    "expectedSize": "lg"
                },
                {
                    "props": {
                        "name": "user",
                        "size": "2x"
                    },
                    "expectedSize": "2x"
                },
                {
                    "props": {
                        "name": "user",
                        "size": "3x"
                    },
                    "expectedSize": "3x"
                }
            ]
        },
        {
            "id": "ICON-006",
            "name": "FAIcon - Rotation",
            "description": "Verify rotation transform is applied",
            "testCases": [
                {
                    "props": {
                        "name": "arrow-up",
                        "rotation": 90
                    },
                    "expectedRotation": 90
                },
                {
                    "props": {
                        "name": "arrow-up",
                        "rotation": 180
                    },
                    "expectedRotation": 180
                },
                {
                    "props": {
                        "name": "arrow-up",
                        "rotation": 270
                    },
                    "expectedRotation": 270
                }
            ]
        },
        {
            "id": "ICON-007",
            "name": "FAIcon - Flip",
            "description": "Verify flip transform is applied",
            "testCases": [
                {
                    "props": {
                        "name": "user",
                        "flip": "horizontal"
                    },
                    "expectedFlip": "horizontal"
                },
                {
                    "props": {
                        "name": "user",
                        "flip": "vertical"
                    },
                    "expectedFlip": "vertical"
                },
                {
                    "props": {
                        "name": "user",
                        "flip": "both"
                    },
                    "expectedFlip": "both"
                }
            ]
        },
        {
            "id": "ICON-008",
            "name": "FAIcon - Click Handler",
            "description": "Verify onClick fires when clicked",
            "actions": [
                {
                    "type": "render",
                    "props": {
                        "name": "times",
                        "onClick": "MOCK"
                    }
                },
                {
                    "type": "click",
                    "target": ".ark-fa-icon"
                },
                {
                    "type": "assert",
                    "target": "onClick",
                    "called": true
                }
            ],
            "expectedResults": {
                "clickHandled": true
            }
        }
    ]
}